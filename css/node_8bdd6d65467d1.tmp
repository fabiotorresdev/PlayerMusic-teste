body {
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    background-color: rgb(77, 75, 75);
    color: rgb(235, 225, 225)
}

img {
    width: 300px;
    height: 270px;

}

.descricao {
    width: 300px;

}

.descricao h2 {
    margin-bottom: 5px;

}

.duracao {
    width: 300px;
    margin-top: 10px
}

.barra {
    width: 300px;
    height: 6px;
    border: 2px solid #eee;
    border-radius: 5px;
    display: flex;  
    align-items: center;  
    justify-content: flex-start;
}

.barra progress {
    height: 6px;
    width: 50%;
    background-color: rgb(77, 75, 75);
    
}

.barra .ponto {
    width: 15px;
    height: 15px;
    background-color: #eee;
    border-radius: 50%;
    margin-left: -3px;
    
}

.tempo {
    display: flex;
    justify-content: space-between;
}

.player {
    width: 300px;
    display: flex;
    justify-content: space-around;
}

.botao-play, .botao-pause{
    font-size: 50px;
}

.setas {
    font-size: 40px ;
}


.botao-pause {
    display: none;
}
